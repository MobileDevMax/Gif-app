import 'package:flutter/material.dart';

void main() {
  runApp(GifApp());
}

class GifApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: Scaffold(
        appBar: AppBar(
          title: Text('GIF APP'),
        ),
        body: Center(
          child: Image.asset('assets/animation.gif'),
          // The file GIF must be added to the folder ASSETS
        ),
      ),
    );
  }
}
